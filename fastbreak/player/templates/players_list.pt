<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">
        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile Phone</th>
                <th>Jersey Number</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>${repeat.p.number}</td>
                <td>
                    <a href="${view.make_url(p)}">
                        ${p.last_name},
                        ${p.first_name}</a>
                </td>
                <td tal:define="pe p.primary_email()">
                    <a href="mailto:${p.primary_email()}">
                        ${pe if pe else 'None'}
                    </a>
                </td>
                <td tal:define="mp p.mobile_phone">
                    ${mp if mp else 'None'}
                </td>
                <td tal:define="jn p.jersey_number">
                    ${jn if jn else 'None'}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
