<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">
        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Home Phone</th>
                <th>Mobile Phone</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="a adults">
                <td>${repeat.a.number}</td>
                <td>
                    <a href="${view.make_url(a)}">
                        ${a.last_name},
                        ${a.first_name}</a>
                </td>
                <td><a href="mailto:${a.email}">${a.email}</a></td>
                <td tal:define="hp a.home_phone">
                    ${hp if hp else 'None'}</td>
                <td tal:define="mp a.mobile_phone">
                    ${mp if mp else 'None'}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
