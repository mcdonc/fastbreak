<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">
        <div tal:condition="players">
            <h4>Players</h4>

            <p>Children related to this adult.</p>
            <ul>
                <li tal:repeat="p players">
                    ${p.last_name}, ${p.first_name}
                </li>
            </ul>
        </div>
        <div tal:condition="teams_coached">
            <h4>Teams Coached</h4>

            <p>Teams related to this adult.</p>
            <ul>
                <li tal:repeat="t teams_coached">
                    <a href="${view.make_url(t)}">${t.title}</a>
                </li>
            </ul>
        </div>
        <div tal:condition="teams_managed">
            <h4>Teams Managed</h4>

            <p>Teams related to this adult.</p>
            <ul>
                <li tal:repeat="t teams_managed">
                    <a href="${view.make_url(t)}">${t.title}</a>
                </li>
            </ul>
        </div>
    </div>
</div>
