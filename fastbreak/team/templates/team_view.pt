<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">

        <div class="row">
            <div class="span5">
                <h4>Coaches</h4>

                <ul>
                    <li tal:repeat="coach coaches">
                        <a href="${view.make_url(coach)}">
                            ${coach.first_name}
                            ${coach.last_name},
                            <a href="mailto:${coach.email}">
                                ${coach.email}</a>,
                            ${coach.mobile_phone}
                        </a>
                    </li>
                </ul>
            </div>

            <div class="span5">
                <h4>Team Manager</h4>

                <ul>
                    <li tal:repeat="team_manager team_managers">
                        <a href="${view.make_url(team_manager)}">
                            ${team_manager.first_name}
                            ${team_manager.last_name},
                            <a href="mailto:${team_manager.email}">
                                ${team_manager.email}</a>,
                            ${team_manager.mobile_phone}
                        </a>
                    </li>
                </ul>
            </div>

        </div>
        <p>
            <h4>Players</h4>
            <table class="table table-striped table-bordered
         table-condensed">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Jersey</th>
                    <th>Grade</th>
                </tr>
                </thead>
                <tbody>
                <tr tal:repeat="p players">
                    <td>${repeat.p.number}</td>
                    <td>
                        <a href="${view.make_url(p)}">
                            ${p.last_name},
                            ${p.first_name}</a>
                    </td>
                    <td>${p.jersey_number}</td>
                    <td>${p.grade}</td>
                </tr>
                </tbody>
            </table>
        </p>
    </div>
</div>
