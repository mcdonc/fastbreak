<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">
        Players:
        <ul tal:repeat="player players">
            <li>
                <a href="${player.url}">${player.title}</a>
            </li>
        </ul>
        Head Coach:
        <p tal:condition="view.head_coach">${view.head_coach.title}</p>
        Assistant Coach:
        <p tal:condition="view.head_coach">
            ${view.assistant_coach.title}</p>
        Team Manager:
        <p tal:condition="view.head_coach">
            ${view.team_manager.title}</p>
    </div>
</div>
