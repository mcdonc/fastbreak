<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Jersey</th>
                <th tal:repeat="tn tourney_names">
                    ${tn}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>${repeat.p.number}</td>
                <td>
                    <a href="${view.make_url(p)}">
                        ${p.last_name},
                        ${p.first_name}</a>
                </td>
                <td>${p.jersey_number if p.jersey_number else 'None'}</td>
                <td tal:repeat="tn tourney_names">
                    ${p.tourney_data[tn]}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>