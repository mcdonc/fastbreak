<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Club Balance</th>
                <th>Uniform Balance</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="b balances">
                <td>${repeat.b.number}</td>
                <td>
                    <a href="${b.url}">
                        ${b.last_name},
                        ${b.first_name}</a>
                </td>
                <td>
                    ${b.dues if b.dues else 'None'}
                </td>
                <td>
                    ${b.uniform if b.uniform else 'None'}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>