<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Primary Email</th>
                <th>Parent</th>
                <th>Parent Email</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>${repeat.p.number}</td>
                <td>
                    <a href="${view.make_url(p)}">
                        ${p.last_name},
                        ${p.first_name}</a>
                </td>
                <td>
                    <a href="mailto:${p.primary_email()}">
                        ${p.primary_email()}
                    </a>
                </td>
                <tal:block tal:define="pg p.primary_guardian()">
                    <td>
                        ${pg.last_name}, ${pg.first_name}
                    </td>
                    <td>
                        <a href="mailto:${pg.primary_email()}">
                            ${pg.primary_email()}
                        </a>
                    </td>
                </tal:block>
            </tr>
            </tbody>
        </table>
    </div>
</div>