<div metal:use-macro="view.macros['layout']">
    <div metal:fill-slot="main">
        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile Phone</th>
                <th>Jersey Number</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>${repeat.p.number}</td>
                <td>
                    <a href="${view.make_url(p)}">
                        ${p.last_name},
                        ${p.first_name}</a>
                </td>
                <td>
                    <a href="mailto:${p.email_or_guardian_email()}">
                        ${p.email_or_guardian_email()}
                    </a>
                </td>
                <td>${p.mobile_phone}</td>
                <td>${p.jersey_number if p.jersey_number else 'N/A'}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
