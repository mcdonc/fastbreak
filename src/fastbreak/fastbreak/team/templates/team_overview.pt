<metal:block use-macro="main_template">
    <div metal:fill-slot="content">


        <div class="row">
            <div class="span5">
                <h4>Coaches</h4>

                <ul>
                    <li tal:repeat="coach head_coaches">
                        <strong>
                            <a href="${request.resource_url(coach)}">
                                ${coach.first_name}
                                ${coach.last_name},
                                <a tal:repeat="email coach.emails"
                                   href="mailto:${email}">
                                    ${email}
                                </a>,
                                ${coach.props['mobile_phone']}
                            </a> (HEAD COACH)
                        </strong>
                    </li>
                    <li tal:repeat="coach assistant_coaches">
                        <a href="${request.resource_url(coach)}">
                            ${coach.first_name}
                            ${coach.last_name},
                            <a tal:repeat="email coach.emails"
                               href="mailto:${email}">
                                ${email}
                            </a>,
                            ${coach.props['mobile_phone']}
                        </a>
                    </li>
                </ul>
            </div>

            <div class="span5">
                <h4>Team Manager</h4>

                <ul>
                    <li tal:repeat="manager managers">
                        <a href="${request.resource_url(manager)}">
                            ${manager.first_name}
                            ${manager.last_name},
                            <a tal:repeat="email manager.emails"
                               href="mailto:${email}">
                                ${email}
                            </a>,
                            ${manager.props['mobile_phone']}
                        </a>
                    </li>
                </ul>
            </div>

        </div>
        <p>
            <h4>Players</h4>
            <table class="table table-striped table-bordered
         table-condensed">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Jersey</th>
                    <th>Position</th>
                    <th>Grade</th>
                </tr>
                </thead>
                <tbody>
                <tr tal:repeat="p players">
                    <td>${repeat.p.number}</td>
                    <td>
                        <a href="${request.resource_url(p)}">
                            ${p.last_name},
                            ${p.first_name}</a>
                    </td>
                    <td tal:define="jn p.jersey_number">
                        ${jn if jn else 'None'}
                    </td>
                    <td>
                        ${p.position}
                    </td>
                    <td tal:define="g p.grade">
                        ${g if g else 'None'}
                    </td>
                </tr>
                </tbody>
            </table>
        </p>

    </div>
</metal:block>