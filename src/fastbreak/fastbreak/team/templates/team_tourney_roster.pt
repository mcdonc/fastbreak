<metal:block use-macro="main_template">
    <div metal:fill-slot="heading-menu">
        <a href="${csv_url}">Download Spreadsheet</a>
    </div>
    <div metal:fill-slot="content">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr style="font-size: larger">
                <th colspan="2">
                    TEAM NAME
                </th>
                <th colspan="3">
                    &nbsp;
                </th>
                <th>
                    DIVISION
                </th>
                <th colspan="1">
                    &nbsp;
                </th>
            </tr>
            <tr>
                <th>Jersey #</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Grad Year</th>
                <th>DOB</th>
                <th>Street Address</th>
                <th>City, State</th>
                <th>Zip</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>
                    ${p.jersey_number}
                </td>
                <td>
                    ${p.first_name}
                </td>
                <td>
                    ${p.last_name}
                </td>
                <td tal:define="gy p.grade">
                    <span tal:condition="gy=='12'">2013</span>
                    <span tal:condition="gy=='11'">2014</span>
                    <span tal:condition="gy=='10'">2015</span>
                    <span tal:condition="gy=='9'">2016</span>
                    <span tal:condition="gy=='8'">2017</span>
                    <span tal:condition="gy=='7'">2018</span>
                </td>
                <td>
                    ${p.props['birthdate']}
                </td>
                <td>
                    ${p.props['address_1']}
                </td>
                <td>
                    ${p.props['city']},
                    ${p.props['state']}
                </td>
                <td>
                    ${p.props['zip']}
                </td>
                <td>
                    ${p.emails[0]}
                </td>
            </tr>
            <tr>
                <th>
                    &nbsp;
                </th>
                <th>
                    COACH
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
            <tr>
                <th>
                    &nbsp;
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th colspan="2">
                    Phone
                </th>
                <th>
                    Street Address
                </th>
                <th>
                    City, State
                </th>
                <th>
                    Zip
                </th>
                <th>
                    Email
                </th>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>${hc.first_name}</td>
                <td>${hc.last_name}</td>
                <td colspan="2">${hc.props['mobile_phone']}</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>${hc.emails[0]}</td>
            </tr>
            </tbody>
        </table>
    </div>
</metal:block>