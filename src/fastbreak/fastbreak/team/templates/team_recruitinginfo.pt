<metal:block use-macro="main_template">
    <div metal:fill-slot="content">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Player</th>
                <th>GY</th>
                <th>Parents</th>
                <th>School</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Player Email</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>
                    ${p.jersey_number}
                </td>
                <td>
                    ${p.first_name} ${p.last_name}
                </td>
                <td tal:define="gy p.grade">
                    <span tal:condition="gy=='12'">2013</span>
                    <span tal:condition="gy=='11'">2014</span>
                    <span tal:condition="gy=='10'">2015</span>
                    <span tal:condition="gy=='9'">2016</span>
                    <span tal:condition="gy=='8'">2017</span>
                    <span tal:condition="gy=='7'">2018</span>
                </td>
                <td>
                    <div tal:repeat="g p.guardians()">
                        ${g.first_name} ${g.last_name}
                    </div>
                </td>
                <td>
                    ${p.props['school']}
                </td>
                <td>
                    <div>${p.props['address_1']}</div>
                    ${p.props['city']},
                    ${p.props['state']}
                    ${p.props['zip']}
                </td>
                <td>
                    ${p.props['mobile_phone']}
                </td>
                <td>
                    ${p.emails[0]}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</metal:block>