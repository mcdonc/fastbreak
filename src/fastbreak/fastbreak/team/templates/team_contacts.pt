<metal:block use-macro="main_template">
    <div metal:fill-slot="content">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>Name</th>
                <th>Emails</th>
                <th>Parent</th>
                <th>Parent Emails</th>
                <th>Parent Mobile</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="p players">
                <td>
                    <a href="${request.resource_url(p)}">
                        ${p.last_name},
                        ${p.first_name}</a>
                </td>
                <td>
                    <a tal:repeat="email p.emails"
                       href="mailto:${email}">
                        ${email}
                    </a>
                </td>
                <tal:block tal:define="pg p.guardians()[0]">
                    <td>
                        ${pg.last_name}, ${pg.first_name}
                    </td>
                    <td>
                        <a tal:repeat="email pg.emails"
                           href="mailto:${email}">
                            ${email}
                        </a>
                    </td>
                    <td>
                        ${pg.props['mobile_phone']}
                    </td>
                </tal:block>
            </tr>
            </tbody>
        </table>
    </div>
</metal:block>