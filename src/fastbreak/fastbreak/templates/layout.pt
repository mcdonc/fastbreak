<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title metal:define-slot="page-title">${heading|view.heading}</title>

    <!--[if lt IE 9]>
    <script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-combined.min.css"
          rel="stylesheet">
    <link href="${request.static_url('substanced.sdi:static/base.css')}"
          rel="stylesheet"/>
    <link
            href="${request.static_url('fastbreak:static/fastbreak.css')}"
            rel="stylesheet"/>

    <!-- Fav icons -->
    <link rel="shortcut icon"
          href="${request.static_url('substanced.sdi:static/favicon.ico')}"/>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
            type="text/javascript"></script>

    <tal:block metal:define-slot="head_more"></tal:block>

</head>

<body>
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="${request.application_url}">
                STORM Dashboard
            </a>

            <ul class="nav">
                <li tal:repeat="team layout.navbar_items">
                    <a href="${team.url}"
                       class="${team.selected}">${team.title}</a>
                </li>
            </ul>
        </div>
    </div>
</div>


<div class="container">
    <heading>
        <h1 class="heading">${heading|view.heading|''}</h1>

        <div class="subnav" tal:condition="view.subnav_items|None"
             style="background-color:#ffffe0;">
            <ul class="nav nav-pills">
                <li tal:repeat="si view.subnav_items">
                    <a href="${si.url}">${si.title}</a>
                </li>
            </ul>
        </div>
    </heading>
    <div metal:define-slot="content">
    </div>
</div>


<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/js/bootstrap.min.js"></script>
<tal:block metal:define-slot="tail_more"></tal:block>

</body>
</html>
