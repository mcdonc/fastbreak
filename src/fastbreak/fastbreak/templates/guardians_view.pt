<metal:block use-macro="main_template">
    <div metal:fill-slot="content">

        <table class="table table-striped table-bordered
         table-condensed">
            <thead>
            <tr>
                <th>Name</th>
                <th>Emails</th>
                <th>Mobile</th>
                <th>Players</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="g guardians">
                <td>
                    <a href="${request.resource_url(g)}">
                        ${g.last_name},
                        ${g.first_name}</a>
                </td>
                <td>
                    <div tal:repeat="email g.emails">
                        <a href="mailto:${email}">
                            ${email}
                        </a>
                    </div>
                </td>
                <td>
                    ${g.props['mobile_phone']}
                </td>
                <td>
                    <div tal:repeat="p g.players()">
                        <a href="${request.resource_url(p)}">
                            ${p.title}</a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</metal:block>